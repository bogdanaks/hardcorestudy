{
    "name": "Hardcore Study",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["app/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["notif/script.js"]
        }
    ],
    "content_security_policy": "script-src 'self' 'sha256-QlM0JGHbX/dMtSTyJ+mM5lxYDquOJGC66BOGQwIz5Os='; object-src 'self'"
}
